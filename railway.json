{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "postBuild": ["bundle install", "bundle exec brakeman --no-pager"]
    }
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "bundle exec rails server -b 0.0.0.0 -p 3000"
  }
}
